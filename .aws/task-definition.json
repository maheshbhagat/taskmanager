{
  "containerDefinitions": [
    {
      "name": "taskmanager",
      "image": "526033727175.dkr.ecr.ap-south-1.amazonaws.com/ecr-task-manager:svc-taskmanager-{{SHORT_SHA}}",
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ],
      "essential": true
    }
  ],
  "family": "taskmanager-task-def",
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskRole"
}